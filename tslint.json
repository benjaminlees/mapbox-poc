{
  "extends": [
    "tslint:latest",
    "tslint-react"
  ],
  "rules": {
    "jsx-wrap-multiline": false,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "no-shadowed-variable": false,
    "no-submodule-imports": [
      true,
      "src"
    ],
    "no-implicit-dependencies": [
      false,
      [
        "src",
        "@client",
        "@server",
        "@atoms",
        "@molecules",
        "@organisms",
        "@styles",
        "@redux"
      ]
    ],
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false,
    "ordered-imports": false
  }
}